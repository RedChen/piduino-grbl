[data-component="Workspace"] {
    > .workspace-container {
        position: absolute;
        top: 51px;
        bottom: 0;
        right: 0;
        left: 0;
    }

    .workspace-table {
        display: table;
        width: 100%;
        height: 100%;
    }
    .workspace-table-row {
        display: table-row;
    }

    .primary-container,
    .secondary-container,
    .main-container {
        display: table-cell;
        vertical-align: top;
    }
    .primary-container,
    .secondary-container {
        background-color: #f0f0f0;
        width: 1%;
        padding: 15px;
    }
    .main-container {
        min-width: 200px;
    }
