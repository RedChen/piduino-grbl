[data-component="Widgets/AxesWidget"] {

    .axes-display-panel {
        border-left: none;
        border-right: none;

        .axis-label {
            font-size: 30px;
            text-align: center;
            width: 60px;
        }
        .axis-position {
            padding: 0 20px;
            text-align: right;
            white-space: nowrap;

            .integer-part {
                font-size: 30px;
                width: 90px;
                text-align: right;
            }
            .decimal-point {
                font-size: 30px;
            }
            .fractional-part {
                font-size: 30px;
            }
            .dimension-unit {
                font-size: 14px;
                vertical-align: top;
                margin-left: 8px;
            }
        }
        .axis-control {
            padding: 4px;
            width: 1%;
        }
    }

    .axes-control-panel {
    }

}
