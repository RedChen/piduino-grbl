[data-component="Widgets/AxesWidget"] {
    .display-panel {
        padding: 0 5px 5px 5px;
        border-bottom: 1px solid #ddd;

        .axis-label {
            text-align: center;
            width: 1%;

            font-size: 30px;
            padding: 0 10px;
        }
        .axis-position {
            padding: 0 10px;
            text-align: right;
            white-space: nowrap;

            .integer-part,
            .decimal-point,
            .fractional-part {
                font-size: 30px;
            }
            .dimension-unit {
                font-size: 14px;
            }

            .integer-part {
                width: 90px;
                text-align: right;
            }

            .dimension-unit {
                vertical-align: top;
            }
        }
        .axis-control {
            width: 1%;
            padding: 0 4px;
            text-align: center;

            .icon {
                font-size: 12px;
            }
        }
    }

    .control-panel {
        background-color: #eee;
        padding: 10px;

        .jog-x,
        .jog-y,
        .jog-z {
            font-size: 24px;
        }
        .jog-x {
            padding: 0 5px;
        }
        .jog-y {
            padding: 5px;
            .jog-y-plus {
                margin-bottom: 10px;
            }
        }
        .jog-z {
            padding: 5px;
            .jog-z-plus {
                margin-bottom: 10px;
            }
        }

        .form-group:last-child {
            margin-bottom: 0;
        }
    }

}
